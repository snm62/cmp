function initializeAll() {
  console.log("Starting initialization...");
  if (isInitialized) {
    console.log("Already initialized");
    return;
  }

  // Block everything first
  blockAllInitialRequests();
  blockAllScripts();

  // Ensure DOM is loaded before proceeding
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      loadConsentState().then(() => {
        console.log("Initialization complete");
        isInitialized = true;
      });
    });
  } else {
    loadConsentState().then(() => {
      console.log("Initialization complete");
      isInitialized = true;
    });
  }
}
  
  // Then load state and initialize banner
  loadConsentState().then(() => {
    console.log("Consent state loaded, initializing banner...");
    const bannerType = localStorage.getItem('banner-type');
    console.log("Banner type from storage:", bannerType);
    
    if (!bannerType) {
      console.error("Banner type not set after loadConsentState");
      return;
    }
    
    initializeBanner();
    isInitialized = true;
    console.log("Initialization complete");
  }).catch(error => {
    console.error("Error during initialization:", error);
  });
}
 setInterval(revalidateBlockedScripts, 5000);
 initializeAll();
 console.log('About to close IIFE');
})();`;

(() => {
  var __defProp = Object.defineProperty;
